{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "NIXPACKS"
  },
  "deploy": {
    "runtime": "V2",
    "numReplicas": 0,
    "overlapSeconds": 0,
    "drainingSeconds": 0,
    "sleepApplication": false,
    "multiRegionConfig": {
      "europe-west4-drams3a": {
        "numReplicas": 5
      }
    },
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 15
  }
}
